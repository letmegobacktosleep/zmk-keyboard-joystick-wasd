DT_COMPAT_ZMK_KSCAN_JOYSTICK := zmk,kscan-joystick

if KSCAN

config ZMK_KSCAN_JOYSTICK
    bool
    select ADC
    default $(dt_compat_enabled,$(DT_COMPAT_ZMK_KSCAN_JOYSTICK))
    help
      Enable support for the ADC-based key scanning driver.

endif # KSCAN
